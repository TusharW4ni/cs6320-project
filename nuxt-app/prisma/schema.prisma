generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Session {
  id        Int       @id @default(autoincrement())
  userId    Int
  User      User      @relation(fields: [userId], references: [id])
  recipeId  Int
  Recipe    Recipe    @relation(fields: [recipeId], references: [id])
  Messages  Message[]
  createdAt DateTime  @default(now())
  archived  Boolean   @default(false)

  @@map("session")
}

model User {
  id        Int       @id @default(autoincrement())
  firstName String?
  lastName  String?
  email     String    @unique
  Sessions  Session[]
  archived  Boolean   @default(false)

  @@map("user")
}

model Recipe {
  id          Int          @id @default(autoincrement())
  title       String
  notes       String
  Ingredients Ingredient[]
  RecipeSteps RecipeStep[]
  Session     Session[]
  createdAt   DateTime     @default(now())
  archived    Boolean      @default(false)

  @@map("recipe")
}

model Message {
  id        Int      @id @default(autoincrement())
  timestamp DateTime @default(now())
  role      String // 'user' | 'assistant'
  content   String
  sessionId Int
  Session   Session  @relation(fields: [sessionId], references: [id])
  archived  Boolean  @default(false)

  @@map("message")
}

model Ingredient {
  id       Int     @id @default(autoincrement())
  text     String
  recipeId Int
  Recipe   Recipe  @relation(fields: [recipeId], references: [id])
  archived Boolean @default(false)

  @@map("ingredient")
}

model RecipeStep {
  id       Int     @id @default(autoincrement())
  text     String
  recipeId Int
  Recipe   Recipe  @relation(fields: [recipeId], references: [id])
  archived Boolean @default(false)

  @@map("recipe_step")
}
